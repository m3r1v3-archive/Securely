<resources>
    <!--    Base application theme    -->
    <style name="Theme.SecurePass" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--    App Theme   -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--    Set action bar color    -->
        <item name="android:actionBarStyle">@color/colorPrimary</item>
    </style>

    <!--    Splash theme    -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--    Set splash    -->
        <item name="android:windowBackground">@xml/splash</item>

        <!--    Theme colors    -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--    Hide action bar    -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--    DialogFragment Animation    -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>