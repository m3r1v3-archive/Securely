<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bar_add_button"
        android:layout_width="112sp"
        android:layout_height="56sp"
        android:background="@xml/background"
        android:contentDescription="@string/todo"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bar_lock_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add"
        app:tint="?colorAccent" />

    <ImageView
        android:id="@+id/bar_lock_button"
        android:layout_width="112sp"
        android:layout_height="56sp"
        android:background="@xml/background"
        android:contentDescription="@string/todo"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bar_add_button"
        app:layout_constraintStart_toEndOf="@id/bar_settings_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lock"
        app:tint="?colorAccent" />

    <ImageView
        android:id="@+id/bar_settings_button"
        android:layout_width="112sp"
        android:layout_height="56sp"
        android:background="@xml/background"
        android:contentDescription="@string/todo"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bar_lock_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings"
        app:tint="?colorAccent" />

</androidx.constraintlayout.widget.ConstraintLayout>