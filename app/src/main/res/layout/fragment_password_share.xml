<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_password_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.merive.securely.elements.TypingTextView
        android:id="@+id/password_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/share_tech_mono"
        android:gravity="center"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="?colorAccent"
        android:textSize="@dimen/text_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/password_share_separator"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="12dp"
        android:src="@xml/horizontal_line"
        app:layout_constraintBottom_toTopOf="@id/password_share_qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/password_share_qr_code"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_marginTop="28dp"
        android:background="@xml/background_filled"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_share_title" />

    <ImageView
        android:id="@+id/password_share_cancel_button"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_marginTop="18dp"
        android:background="@xml/background"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@id/password_share_copy_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_share_qr_code"
        app:srcCompat="@drawable/ic_cancel"
        app:tint="?colorAccent" />

    <ImageView
        android:id="@+id/password_share_copy_button"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_marginTop="18dp"
        android:background="@xml/background"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/password_share_cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/password_share_qr_code"
        app:srcCompat="@drawable/ic_copy"
        app:tint="?colorAccent" />

</androidx.constraintlayout.widget.ConstraintLayout>