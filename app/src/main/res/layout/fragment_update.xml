<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="372dp"
    android:layout_height="192dp"
    android:layout_gravity="center"
    android:background="@xml/background"
    android:minWidth="372dp"
    android:minHeight="192dp">

    <com.merive.securely.elements.TypingTextView
        android:id="@+id/update_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/share_tech_mono"
        android:gravity="center"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="?colorAccent"
        android:textSize="@dimen/text_title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/update_separator"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="12dp"
        android:src="@xml/horizontal_line"
        app:layout_constraintBottom_toTopOf="@id/update_label_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.merive.securely.elements.TypingTextView
        android:id="@+id/update_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/share_tech_mono"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?colorAccent"
        android:textSize="@dimen/text_label_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_title_text" />

    <ImageView
        android:id="@+id/update_download_button"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:background="@xml/background"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_label_text"
        app:srcCompat="@drawable/ic_download"
        app:tint="?colorAccent" />

</androidx.constraintlayout.widget.ConstraintLayout>