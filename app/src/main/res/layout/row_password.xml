<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@xml/background"
    android:padding="4dp">

    <TextView
        android:id="@+id/row_password_name"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:fontFamily="@font/share_tech_mono"
        android:padding="12sp"
        android:singleLine="true"
        android:textColor="?colorAccent"
        android:textSize="22sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@id/row_separator"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_separator"
        android:layout_width="32sp"
        android:layout_height="0sp"
        android:src="@xml/vertical_line"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@id/row_options_button"
        card_view:layout_constraintStart_toEndOf="@id/row_password_name"
        card_view:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/row_options_button"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginEnd="12sp"
        android:background="@xml/background"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@id/row_separator"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/ic_options"
        card_view:tint="?colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>